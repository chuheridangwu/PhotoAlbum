<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_nav_state_title_view" android:id="@+id/follow_nav_view"></include>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/follow_nav_view"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/follow_recycler_view"></androidx.recyclerview.widget.RecyclerView>

    <ImageView
        android:visibility="gone"
        android:id="@+id/follow_empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/follow_empty"></ImageView>

</RelativeLayout>