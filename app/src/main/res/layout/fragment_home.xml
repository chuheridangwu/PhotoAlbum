<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:sob="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/home_top"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/app_name"></TextView>
        <EditText
            android:id="@+id/home_search_edit"
            android:background="@drawable/shape_home_edit_bg"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:paddingLeft="10dp"
            android:hint="请输入搜索内容"
            android:maxLines="1"
            android:inputType="text"
            android:drawableLeft="@mipmap/home_search"
            android:imeOptions="actionSearch"
            android:textColorHint="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentBottom="true"></EditText>
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/remove"
            android:layout_marginBottom="11dp"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@id/home_search_edit"
            android:layout_alignRight="@id/home_search_edit"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:id="@+id/home_search_remove"
            ></ImageView>
    </RelativeLayout>
    <com.cool.photoalbum.ui.custom.TextFlowLayout
        sob:verticalSpace= "10dp"
        sob:horizontalSpace="10dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/home_flow_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.cool.photoalbum.ui.custom.TextFlowLayout>


</LinearLayout>