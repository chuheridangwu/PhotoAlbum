<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/home_top"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="80dp"
            android:text="@string/app_name"></TextView>
        <EditText
            android:id="@+id/home_search_edit"
            android:background="@drawable/shape_home_edit_bg"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:hint="请输入搜索内容"
            android:drawableLeft="@mipmap/home_search"
            android:textColorHint="@color/colorPrimaryDark"
            android:layout_alignParentBottom="true"></EditText>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></View>
    </LinearLayout>


</LinearLayout>