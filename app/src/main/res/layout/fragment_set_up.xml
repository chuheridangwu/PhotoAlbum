<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    xmlns:sob="http://schemas.android.com/apk/res-auto"
    android:background="#e6e6e6"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_nav_title_view"></include>

        <View style="@style/FullMarginView"></View>

        <RelativeLayout
            android:id="@+id/rl_notify_live"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                style="@style/BigTextAppearance.ItemLeft"
                android:text="添加关注密码" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/set_up_setting_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/left_right_margin"
                android:layout_marginRight="@dimen/left_right_margin"
                android:clickable="true"
                android:textOff="开启"
                android:textOn="关闭" />
        </RelativeLayout>

        <View style="@style/FullMarginView"></View>

        <com.cool.photoalbum.ui.custom.SectionRowView
            android:id="@+id/set_up_look_download"
            sob:title="查看下载的图片"
            android:layout_width="match_parent"
            android:layout_height="40dp"></com.cool.photoalbum.ui.custom.SectionRowView>

        <View style="@style/FullMarginView"></View>

        <com.cool.photoalbum.ui.custom.SectionRowView
            android:id="@+id/set_up_look_ad"
            sob:title="观看视频屏蔽广告"
            android:layout_width="match_parent"
            android:layout_height="40dp"></com.cool.photoalbum.ui.custom.SectionRowView>

        <View style="@style/FullMarginView"></View>

        <com.cool.photoalbum.ui.custom.SectionRowView
            android:id="@+id/set_up_clear_cache"
            sob:title="清除缓存"
            android:layout_width="match_parent"
            android:layout_height="40dp"></com.cool.photoalbum.ui.custom.SectionRowView>

        <View style="@style/FullMarginView"></View>

        <com.cool.photoalbum.ui.custom.SectionRowView
            android:id="@+id/set_up_about_me"
            sob:title="关于我们"
            android:layout_width="match_parent"
            android:layout_height="40dp"></com.cool.photoalbum.ui.custom.SectionRowView>

    </LinearLayout>

</ScrollView>



